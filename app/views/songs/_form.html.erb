<%= form_with(model: [@artist, @song], local: true, class: "ui form") do |f| %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, required: true, placeholder: "Title", autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :album %>
    <%= f.text_field :album, required: true, placeholder: "Album" %>
  </div>
  <div class="field">
      <h4>Add to Billboard</h4>
      <%= f.select "bboard_id", options_for_select(@bboards.collect {|u| [u.title, u.id] }, {:include_blank => true}) %>
  </div>
  <%= f.submit "Submit", class: "ui blue button" %>
<% end %>
